<script language = 'javascript'>

progress = 0;

  function startTime() {
    
    setTimeout(showProgress, 1000);
    setTimeout(doWork, 100000);
	
  }

  function showProgress() {
   	
	document.getElementById("progresss").innerHTML = '<div class="bar" style="width: ' + progress +'%;"></div>';
	progress = progress + 1;
	
	
	setTimeout(showProgress, 1000);
  }

  function doWork() {
    window.location = "<%=  "/game/attack_user/" + @victum.id.to_s + "/fight"%>";
	//window.location = "/game/job/1";
  }
</script>

