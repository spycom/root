    <div class="container">

      <h1>Select your new job <a class="btn btn-large " href="/game">Back &raquo;</a></h1>
      <p>Every job provides you with money and experience.</p>
	
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Job</th>
	<th>Salary</th>
  <th>Exp</th>
	<th>Button</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <% if @user.job < job.id * 5 %>
      <% if @user.exp_all >= job.exp %>
        <% if @user.job == job.id %>
          <tr class="success">
            <td><%= job.id %></td>
            <td><%= job.name %></td>
            <td><%= job.salary %> $</td>
            <td><%= job.exp %> </td>
            <td><a class="btn btn-success disabled" >do it &raquo;</a></td>
          </tr>
          <% else %>
          <tr>
            <td><%= job.id %></td>
            <td><%= job.name %></td>
            <td><%= job.salary %> $</td>
            <td><%= job.exp %> </td>
            <td><a class="btn btn-success btn-block" <%= "href=job/" + job.id.to_s %>>do it &raquo;</a></td>
          </tr>
          <% end %>
      <% else %>
      <tr class="error">
        <td><%= job.id %></td>
        <td><%= job.name %></td>
        <td><%= job.salary %> $</td>
        <td><%= job.exp %> (+<%=  job.exp - @user.exp_all %>)</td>
        <td><a class="btn btn-danger disabled" >do it &raquo;</a></td>
      </tr>
      <% end %>
    <% end %>
    <% end %>
    <tr>
      <td>.</td>
      <td>...</td>
      <td>...</td>
      <td>...</td>
      <td><a class="btn btn-danger disabled" >do it &raquo;</a></td>
    </tr>
  </tbody>
</table>

