<% @hardwares.each do |hardware| %>
	<% if @user.hdpts < hardware.id * 15 %>
		<% if @user.exp_all >= hardware.exp %>
    <tr>
      <td><%= hardware.id %></td>
      <td><%= hardware.name %></td>
			<td><%= hardware.price %> $</td>
      <td><%= hardware.exp %></td>
      <td><a class="btn btn-block btn-success btn-large" <%= "href=hard/" + hardware.id.to_s %>>do it &raquo;</a></td>
    </tr>
		<% else %>
		<tr>
      <td><%= hardware.id %></td>
      <td><%= hardware.name %></td>
			<td><%= hardware.price %> $</td>
      <td><%= hardware.exp %> (+<%=  hardware.exp - @user.exp_all %>)</td>
      <td><a class="btn btn-danger btn-large disabled" >do it &raquo;</a></td>
    </tr>
		<% end %>
		<% end %>
<% end %>

